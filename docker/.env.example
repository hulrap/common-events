# ============================================
# Common Events - Self-Hosted Configuration
# Copy this file to .env and fill in your values
# ============================================

# ===================
# Domain Configuration
# ===================
SITE_URL=https://events.yourdomain.com
SITE_DOMAIN=events.yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# ===================
# Database
# ===================
POSTGRES_PASSWORD=your_secure_database_password_here

# ===================
# GoTrue Authentication
# ===================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_minimum_32_characters_here

# These keys are used by the Supabase client library
# Generate anon key: https://supabase.com/docs/guides/self-hosting#api-keys
ANON_KEY=your_anon_key_here
SERVICE_ROLE_KEY=your_service_role_key_here

# ===================
# MinIO Storage
# ===================
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here

# ===================
# SMTP (for auth emails)
# ===================
# Options: Resend, SendGrid, Mailgun, Amazon SES, etc.
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASS=your_smtp_api_key_here
SMTP_ADMIN_EMAIL=noreply@yourdomain.com

# ===================
# Security
# ===================
# Generate with: openssl rand -hex 32
CSRF_SECRET=your_csrf_secret_here

# ===================
# Google Maps
# ===================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===================
# Web Push Notifications (VAPID keys)
# ===================
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
